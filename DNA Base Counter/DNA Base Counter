# First Method (using 'for' loop)
DNA = input() #Input the DNA sequence here, like TAGCTAGCTAGC...etc (just sequence, dont give any attributes like " or '')
A = []
C = []
T = []
G = []

for a in DNA:
    if a == 'A':
        A.append(a)
for c in DNA:
    if c == 'C':
        C.append(c)
for t in DNA:
    if t == 'T':
        T.append(t)
for g in DNA:
    if g == 'G':
        G.append(g)

print('Number of Bases A =', len(A))
print('Number of Bases C =', len(C))
print('Number of Bases T =', len(T))
print('Number of Bases G =', len(G))

# Second method (using list comprehention)
DNA = input() #Input the DNA sequence here, like TAGCTAGCTAGC...etc (just sequence, dont give any attributes like " or '')

A = [A.append(a) for a in DNA if a == 'A']
C = [C.append(c) for c in DNA if c == 'C']
T = [T.append(t) for t in DNA if t == 'T']
G = [G.append(g) for g in DNA if g == 'G']

print('Number of Bases A =', len(A))
print('Number of Bases C =', len(C))
print('Number of Bases T =', len(T))
print('Number of Bases G =', len(G))
